#include <bits/stdc++.h>

using namespace std;

int main(){
    int n, k;
    cin >> n >> k;
    int num[n];
    for (int i = 0; i < n; i ++){
        int x;
        cin >> x;
        num[i] = x;
    }
    sort(num, num+n);
    int sum = 0;
    for (int i = 0; i < k; i ++){
        sum += num[i];
    }
    cout << sum << endl;
}
